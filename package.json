{
  "name": "vscode-chronos",
  "displayName": "Chronos",
  "description": "Track coding time and tasks inside VS Code",
  "version": "1.0.1",
  "publisher": "bababum",
  "icon": "images/logo.png",
  "author": {
    "name": "Andrew Stepanov",
    "email": "bababum1995@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bababum95/vscode-chronos"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Education"
  ],
  "keywords": [
    "time tracking",
    "productivity",
    "tasks",
    "chronos"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chronos.hello",
        "title": "Chronos: Hello"
      },
      {
        "command": "chronos.setApiKey",
        "title": "Chronos: Api Key"
      },
      {
        "command": "chronos.test",
        "title": "Chronos: Test"
      }
    ],
    "configuration": {
      "title": "Chronos",
      "properties": {
        "chronos.serverUrl": {
          "type": "string",
          "default": "https://next-chronos.vercel.app",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode none",
    "compile:dev": "tsc -p ./",
    "dev": "webpack --mode none --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "package:vsix": "vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile",
    "test": "vscode-test",
    "clean": "rm -rf dist out"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.89.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "@vscode/vsce": "^2.27.1",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "extensionKind": [
    "workspace"
  ],
  "dependencies": {
    "axios": "^1.11.0"
  }
}
